<?php

class RecipeTest extends TestCase
{
    /**
     * @test
     */
    public function itShouldReturnA200()
    {
        $response = $this->call(
            'GET',
            '/recipes'
        );

        $this->assertEquals(
            200,
            $response->getStatusCode()
        );
    }

    /**
     * @test
     */
    public function itShouldReturnAnArrayOfRecipes()
    {
        $response = $this->call(
            'GET',
            '/recipes'
        );

        $this->assertEquals(
            $this->getFixture('recipes/happy-path-response'),
            $response->getData()
        );
    }
}
